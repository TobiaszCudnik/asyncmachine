{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "declaration": true,
        "removeComments": false,
        "lib": ["es2017", "dom"],
        "sourceMap": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictNullChecks": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "preserveConstEnums": true,
        "outDir": "build"
    },
    "include": [
        "src/**/*"
    ],
    "jsdoc": "docs"
}